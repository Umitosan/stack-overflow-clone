<!DOCTYPE html>
<html>
  <head>
    <title>StackOverflowClone</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div id="navbar"> 
      <ul>
        <% if current_user %>
          <li><%= current_user.email %> | <%= link_to "Sign out", '/signout' %></li>
        <% else %>
          <li><%= link_to "Sign up", 'signup' %> | <%= link_to "Sign in", '/signin' %></li>
        <% end %>
      </ul>
    </div>

    <%= flash[:alert] %>
    <%= flash[:notice] %>

    <%= yield %>

  </body>
</html>
